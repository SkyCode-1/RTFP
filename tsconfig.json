{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["src", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"],
  "paths": {
    "@src/*": [
      "./src/*"
    ],
  }
}
